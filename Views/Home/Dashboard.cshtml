@model AdminDash

@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard | Wennovation Hub</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css" rel="stylesheet">
    <link rel="icon" href="~/images/logo.png" type="image/x-icon">
    <style>
        :root {
            --primary-color: #f79f4a;
            --primary-light: rgba(247, 159, 74, 0.1);
            --secondary: #368032;
            --secondary-light: rgba(54, 128, 50, 0.1);
            --light: #f8f9fa;
            --dark: #2a2d34;
            --gray: #6c757d;
            --transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        }
    using Microsoft.EntityFrameworkCore.Metadata.Internal;
#line default
    body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f5f7fa;
            color: var(--dark);
        }
        
        .sidebar {
            background-color: var(--dark);
            color: white;
            height: 100vh;
            position: fixed;
            width: 250px;
            transition: var(--transition);
            z-index: 1000;
        }
        
        .sidebar-brand {
            padding: 1.5rem;
            display: flex;
            align-items: center;
            justify-content: center;
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        }
        
        .sidebar-brand img {
            height: 60px;
        }
        
        .sidebar-nav {
            padding: 1rem 0;
        }
        
        .nav-link {
            color: rgba(255, 255, 255, 0.8);
            padding: 0.75rem 1.5rem;
            margin: 0.25rem 0;
            transition: var(--transition);
            border-left: 3px solid transparent;
        }
        
        .nav-link:hover, .nav-link.active {
            color: white;
            background-color: rgba(255, 255, 255, 0.05);
            border-left: 3px solid var(--primary-color);
        }
        
        .nav-link i {
            width: 24px;
            text-align: center;
            margin-right: 0.75rem;
        }
        
        .main-content {
            margin-left: 250px;
            padding: 1.5rem;
            transition: var(--transition);
        }
        
        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 1rem 0;
            margin-bottom: 1.5rem;
            border-bottom: 1px solid rgba(0, 0, 0, 0.1);
        }
        
        .header h2 {
            font-weight: 600;
            color: var(--dark);
            margin: 0;
        }
        
        .user-dropdown img {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            margin-right: 0.5rem;
        }
        
        .card {
            border: none;
            border-radius: 10px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
            transition: var(--transition);
            margin-bottom: 1.5rem;
        }
        
        .card:hover {
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
        }
        
        .card-header {
            background-color: white;
            border-bottom: 1px solid rgba(0, 0, 0, 0.05);
            padding: 1.25rem 1.5rem;
            border-radius: 10px 10px 0 0 !important;
        }
        
        .card-header h5 {
            font-weight: 600;
            color: var(--dark);
            margin: 0;
        }
        
        .table-responsive {
            border-radius: 0 0 10px 10px;
            overflow: hidden;
        }
        
        .table {
            margin-bottom: 0;
        }
        
        .table thead th {
            background-color: var(--light);
            border-bottom: 1px solid rgba(0, 0, 0, 0.05);
            font-weight: 600;
            color: var(--dark);
            padding: 1rem 1.25rem;
        }
        
        .table tbody td {
            padding: 1rem 1.25rem;
            vertical-align: middle;
        }
        
        .badge {
            padding: 0.5em 0.75em;
            font-weight: 500;
            border-radius: 50px;
        }
        
        .badge-primary {
            background-color: var(--primary-light);
            color: var(--primary-color);
        }
        
        .badge-success {
            background-color: rgba(40, 167, 69, 0.1);
            color: #28a745;
        }
        
        .badge-warning {
            background-color: rgba(255, 193, 7, 0.1);
            color: #ffc107;
        }
        
        .badge-danger {
            background-color: rgba(220, 53, 69, 0.1);
            color: #dc3545;
        }
        
        .btn-primary-custom {
            background-color: var(--primary-color);
            border-color: var(--primary-color);
            color: white;
            font-weight: 500;
            padding: 0.5rem 1.25rem;
            border-radius: 50px;
            transition: var(--transition);
        }
        
        .btn-primary-custom:hover {
            background-color: #e68e3f;
            border-color: #e68e3f;
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(247, 159, 74, 0.3);
            color: white;
        }
        
        .btn-outline-custom {
            border-color: var(--primary-color);
            color: var(--primary-color);
            font-weight: 500;
            padding: 0.5rem 1.25rem;
            border-radius: 50px;
            transition: var(--transition);
        }
        
        .btn-outline-custom:hover {
            background-color: var(--primary-color);
            color: white;
            transform: translateY(-2px);
        }
        
        .stats-card {
            padding: 1.5rem;
            border-radius: 10px;
            color: white;
            margin-bottom: 1.5rem;
        }
        
        .stats-card i {
            font-size: 2rem;
            opacity: 0.8;
        }
        
        .stats-card .count {
            font-size: 2rem;
            font-weight: 600;
            margin: 0.5rem 0;
        }
        
        .stats-card .label {
            opacity: 0.8;
            font-size: 0.9rem;
        }
        
        .stats-card.bookings {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        }
        
        .stats-card.applications {
            background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
        }
        
        .stats-card.approved {
            background: linear-gradient(135deg, #43e97b 0%, #38f9d7 100%);
        }
        
        .stats-card.pending {
            background: linear-gradient(135deg, #ff9a9e 0%, #fad0c4 100%);
        }
        
        media (max-width: 992px) {
            .sidebar {
                width: 80px;
                overflow: hidden;
            }
            
            .sidebar-brand span, .nav-link span {
                display: none;
            }
            
            .nav-link {
                text-align: center;
                padding: 0.75rem;
            }
            
            .nav-link i {
                margin-right: 0;
                font-size: 1.25rem;
            }
            
            .main-content {
                margin-left: 80px;
            }
        }
        
        @* media (max-width: 768px) {
            .sidebar {
                transform: translateX(-100%);
                position: fixed;
            }
            
            .sidebar.active {
                transform: translateX(0);
            }
            
            .main-content {
                margin-left: 0;
            }
            
            .header h2 {
                font-size: 1.5rem;
            }
        } *@
    </style>
</head>
<body>
    <!-- Sidebar -->
    <div class="sidebar">
        <div class="sidebar-brand">
            <img src="~/images/footer-logo.png" alt="Logo">
        </div>
        <ul class="sidebar-nav flex-column">
            <li class="nav-item">
                <a href="#" class="nav-link active">
                    <i class="fas fa-tachometer-alt"></i>
                    <span>Dashboard</span>
                </a>
            </li>
            <li class="nav-item">
                <a href="#" class="nav-link">
                    <i class="fas fa-calendar-check"></i>
                    <span>Bookings</span>
                </a>
            </li>
            <li class="nav-item">
                <a href="#" class="nav-link">
                    <i class="fas fa-users"></i>
                    <span>Wennovators</span>
                </a>
            </li>
            <li class="nav-item">
                <a href="#" class="nav-link">
                    <i class="fas fa-envelope"></i>
                    <span>Messages</span>
                </a>
            </li>
            <li class="nav-item">
                <a href="#" class="nav-link">
                    <i class="fas fa-cog"></i>
                    <span>Settings</span>
                </a>
            </li>
            <li class="nav-item">
                <a href="/logout" class="nav-link">
                    <i class="fas fa-sign-out-alt"></i>
                    <span>Logout</span>
                </a>
            </li>
        </ul>
    </div>

    <!-- Main Content -->
    <div class="main-content">
        <!-- Header -->
        <div class="header">
            <h2>Admin Dashboard</h2>
            <div class="dropdown user-dropdown">
                <a class="btn dropdown-toggle d-flex align-items-center" href="#" role="button" id="userDropdown" data-bs-toggle="dropdown">
                    <img src="https://cdn.pixabay.com/photo/2016/08/08/09/17/avatar-1577909_1280.png" alt="User">
                    <span>@ViewBag.admin</span>
                </a>
                <ul class="dropdown-menu dropdown-menu-end">
                    <li><a class="dropdown-item" href="#"><i class="fas fa-user me-2"></i> Profile</a></li>
                    <li><a class="dropdown-item" href="#"><i class="fas fa-cog me-2"></i> Settings</a></li>
                    <li><hr class="dropdown-divider"></li>
                    <li><a class="dropdown-item" href="/logout"><i class="fas fa-sign-out-alt me-2"></i> Logout</a></li>
                </ul>
            </div>
        </div>
        
        <!-- Stats Cards -->
        <div class="row">
            <div class="col-md-6 col-lg-3">
                <div class="stats-card bookings">
                    <i class="fas fa-calendar-check"></i>
                    <div class="count">@ViewBag.bookingsCount</div>
                    <div class="label">Total Bookings</div>
                </div>
            </div>
            <div class="col-md-6 col-lg-3">
                <div class="stats-card applications">
                    <i class="fas fa-users"></i>
                    <div class="count">@ViewBag.wennovatorsCount</div>
                    <div class="label">New Applications</div>
                </div>
            </div>
            <div class="col-md-6 col-lg-3">
                <div class="stats-card approved">
                    <i class="fas fa-check-circle"></i>
                    <div class="count">@ViewBag.consultCount</div>
                    <div class="label">Consult Requests</div>
                </div>
            </div>
            @* <div class="col-md-6 col-lg-3">
                <div class="stats-card pending">
                    <i class="fas fa-clock"></i>
                    <div class="count">33</div>
                    <div class="label">Pending Reviews</div>
                </div>
            </div> *@
        </div>

         <!-- Wennovator Applications Table -->
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5>Wennovator Applications</h5>
                <div>
                    <button class="btn btn-primary-custom btn-sm">
                        <i class="fas fa-download me-1"></i> Export
                    </button>
                </div>
            </div>
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            @* <th>Application ID</th> *@
                            <th>Business Name</th>
                            <th>Email</th>
                            <th>Date Applied</th>
                            <th>Status</th>
                            @* <th>Actions</th> *@
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var wennovator in Model.Wennovators)
                        {
                        <tr>
                            <td>@wennovator.ApplicationId</td>
                            <td>
                                <div class="d-flex align-items-center">
                                    @* <img src="https://randomuser.me/api/portraits/women/33.jpg" alt="User" class="rounded-circle me-2" width="30" height="30"> *@
                                    @wennovator.BusinessName
                                </div>
                            </td>
                            <td>@wennovator.Email</td>
                            <td>@wennovator.SubmissionDate</td>
                            <td><span class="badge badge-success">Approved</span></td>
                            @* <td>
                                <button class="btn btn-sm btn-outline-custom">
                                    <i class="fas fa-eye"></i>
                                </button>
                                <button class="btn btn-sm btn-outline-custom">
                                    <i class="fas fa-edit"></i>
                                </button>
                            </td> *@
                        </tr>
                        }
                            
                    </tbody>
                </table>
            </div>
        </div>

         <!-- Bookings Table -->
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5>Consults</h5>
                @* <div>
                    <button class="btn btn-primary-custom btn-sm">
                        <i class="fas fa-plus me-1"></i> Add Booking
                    </button>
                </div> *@
            </div>
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Phone</th>
                            <th>Organization</th>
                            <th>Services</th>
                            <th>Date</th>
                        </tr>
                    </thead>
                    <tbody>
                    @foreach (var consult in Model.Consults)
                    {
                        <tr>
                            <td>@consult.ConsultId</td>
                            <td>@consult.Name</td>
                            <td>@consult.Email</td>
                            <td>@consult.Phone</td>
                            <td>@consult.Organization</td>
                            <td>@consult.Service</td>
                            <td>@(consult.CreatedAt.ToString("yyyy-MM-dd"))</td>
                            
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Bookings Table -->
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5>Recent Bookings</h5>
                @* <div>
                    <button class="btn btn-primary-custom btn-sm">
                        <i class="fas fa-plus me-1"></i> Add Booking
                    </button>
                </div> *@
            </div>
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Location</th>
                            <th>Event</th>
                            <th>Booked By</th>
                            <th>Date</th>
                            
                            <th>Status</th>
                            @* <th>Actions</th> *@
                        </tr>
                    </thead>
                    <tbody>
                    @foreach (var booking in Model.Bookings)
                    {
                        <tr>
                            <td>@booking.BookingId</td>
                            <td>@booking.Location</td>
                            <td>@booking.SpaceType - @booking.Purpose</td>
                            <td>
                                <div class="d-flex align-items-center">
                                    
                                    @booking.Name
                                </div>
                            </td>
                            <td>@(booking.Date?.ToString("yyyy-MM-dd"))</td>
                            <td><span class="badge badge-success">Confirmed</span></td>
                            @* <td>
                                <button class="btn btn-sm btn-outline-custom">
                                    <i class="fas fa-eye"></i>
                                </button>
                                <button class="btn btn-sm btn-outline-custom">
                                    <i class="fas fa-edit"></i>
                                </button>
                            </td> *@
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>

       
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>
    <script>
        $(document).ready(function() {
            // Initialize DataTables
            $('table').DataTable({
                responsive: true,
                language: {
                    search: "_INPUT_",
                    searchPlaceholder: "Search...",
                },
                dom: '<"top"f>rt<"bottom"lip><"clear">',
                pageLength: 5
            });
            
            // Toggle sidebar on mobile
            $('#sidebarToggle').click(function() {
                $('.sidebar').toggleClass('active');
            });
        });
    </script>
</body>
</html>